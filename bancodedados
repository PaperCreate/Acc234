CREATE DATABASE cadastro;

CREATE TABLE cadastros (id INT(4) UNIQUE NOT NULL AUTO_INCREMENT, nome VARCHAR(200) NOT NULL, sobrenome VARCHAR(200), email VARCHAR(150) UNIQUE NOT NULL, telefone VARCHAR(50), senha VARCHAR(200), PRIMARY KEY(id));

CREATE DATABASE contatar;

CREATE TABLE mensagens (id INT(4) UNIQUE NOT NULL AUTO_INCREMENT, nome_completo VARCHAR(400) NOT NULL, email VARCHAR(150) UNIQUE NOT NULL, mensagem VARCHAR(1000) NOT NULL, PRIMARY KEY(id));
